{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx", // Enables React JSX syntax
    "outDir": "./build",
    "rootDir": "./src",
    "moduleResolution": "node", 
    "typeRoots": ["./node_modules/@types", "./src/"],

  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
